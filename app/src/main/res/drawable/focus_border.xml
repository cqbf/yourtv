            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>